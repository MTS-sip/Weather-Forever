{
  "compilerOptions": {
    "rootDir": "src",            // Source files directory
    "outDir": "dist",            // Output directory relative to the current directory
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"],             // Only compile files in the `src` folder
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}