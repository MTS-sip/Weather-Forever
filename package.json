{
  "name": "weather-dashboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run server",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "render-build": "npm install && npm run build",
    "server": "node server/dist/server.js",
    "server:dev": "nodemon server/src/server.ts",
    "server:build": "tsc --project server/tsconfig.json",
    "client:dev": "vite",
    "client:build": "vite build",
    "install:prod": "npm install --omit=dev"
  },

  "dependencies": {
    "express": "^4.21.2",
    "dotenv": "^16.4.5",
    "uuid": "^9.0.1",
    "node-fetch": "^3.3.2",
    "@fortawesome/fontawesome-free": "^6.5.2",
    "bootstrap": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.12.7",
    "@types/express": "^4.17.21",
    "nodemon": "^3.1.0",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}


